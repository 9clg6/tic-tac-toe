    "version": "0.2.0",
    "configurations": [
        {
            "name": "Dev",
            "program": "lib/main.dart",
            "request": "launch",
            "type": "dart",
            "args": [
                "--flavor=dev",
                "--dart-define-from-file=.env.dev.json"
            ]
        },
        {
            "name": "Staging",
            "program": "lib/main.dart",
            "request": "launch",
            "type": "dart",
            "args": [
                "--flavor=staging",
                "--dart-define-from-file=.env.staging.json"
            ]
        },
        {
            "name": "Prod",
            "program": "lib/main.dart",
            "request": "launch",
            "type": "dart",
            "flutterMode": "debug",
            "args": [
                "--flavor=prod",
                "--dart-define-from-file=.env.prod.json"
            ]
        }
    ]
}